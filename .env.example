# =============================================================================
# WEATHER PREDICTION MARKET BOT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# SOLANA CONFIGURATION
# =============================================================================
# Your Solana wallet private key (base58 encoded)
# Generate a new one with: solana-keygen new
SOLANA_PRIVATE_KEY=your_base58_encoded_private_key_here

# RPC endpoint (use a dedicated one for production)
# Free options: https://api.mainnet-beta.solana.com, https://rpc.helius.xyz/?api-key=YOUR_KEY
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Commitment level: processed, confirmed, finalized
SOLANA_COMMITMENT=confirmed

# =============================================================================
# WEATHER API KEYS
# =============================================================================
# National Weather Service API (free, no key needed - just contact email)
NWS_USER_AGENT=WeatherBot (your-email@example.com)

# OpenWeatherMap API (free tier available: https://openweathermap.org/api)
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key

# Optional: AccuWeather API key
ACCUWEATHER_API_KEY=

# Optional: Weather.com / IBM Weather API key
IBM_WEATHER_API_KEY=

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Minimum edge required to trade (as decimal, e.g., 0.08 = 8%)
MIN_EDGE_THRESHOLD=0.08

# Maximum edge (sanity check - edges too large might indicate bad data)
MAX_EDGE_THRESHOLD=0.50

# Position sizing method: "kelly" or "fixed"
POSITION_SIZING_METHOD=kelly

# Fixed position size in USDC (used if POSITION_SIZING_METHOD=fixed)
FIXED_POSITION_SIZE_USDC=50

# Kelly fraction multiplier (e.g., 0.25 = quarter Kelly for safety)
KELLY_FRACTION=0.25

# Maximum single position size in USDC
MAX_POSITION_SIZE_USDC=500

# Maximum total portfolio exposure in USDC
MAX_TOTAL_EXPOSURE_USDC=2000

# Slippage tolerance (as decimal, e.g., 0.02 = 2%)
SLIPPAGE_TOLERANCE=0.02

# Take profit threshold (exit when edge drops below this)
TAKE_PROFIT_EDGE=0.02

# =============================================================================
# BOT CONFIGURATION
# =============================================================================
# How often to run the main loop (in minutes)
BOT_INTERVAL_MINUTES=10

# Enable/disable automatic trading (set to false for paper trading)
AUTO_TRADE_ENABLED=false

# Cities to focus on (comma-separated, empty = all available)
# Examples: NYC,LAX,CHI,DFW,DEN,MIA,PHX,SEA
FOCUS_CITIES=

# Market categories to trade (comma-separated)
# Options: temperature,precipitation,snow,hurricane
MARKET_CATEGORIES=temperature,precipitation

# =============================================================================
# ALERT CONFIGURATION
# =============================================================================
# Telegram bot token and chat ID for alerts
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord webhook URL for alerts
DISCORD_WEBHOOK_URL=

# Alert on trades, edges found, errors
ALERT_ON_TRADES=true
ALERT_ON_EDGES=true
ALERT_ON_ERRORS=true

# =============================================================================
# KALSHI API (if direct access available)
# =============================================================================
KALSHI_API_KEY=
KALSHI_API_SECRET=

# =============================================================================
# LOGGING
# =============================================================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log to file (in addition to console)
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/bot.log

# =============================================================================
# FRONTEND/API
# =============================================================================
# Port for the bot's HTTP API (used by frontend)
BOT_API_PORT=3001

# API key for frontend to access bot data
BOT_API_KEY=your_secure_api_key_here
